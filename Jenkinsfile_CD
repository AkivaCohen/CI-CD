pipeline {
    agent {
        node {
            label "${env.SLAVE_NODE}"
        }
    }
//   tools {nodejs "node"}

  stages {

    stage('install NodeJS if not installed') {
      steps {
        sh 'chmod +x ./nodejs_install.sh'
        sh './nodejs_install.sh'
        sh 'node --version'
      }
    }

    stage('Cloning Git') {
      steps {
        git 'https://github.com/AkivaCohen/WeightTracker.git'
      }
    }

    stage('Copy Archive') {
         steps {
             script {
                step ([$class: 'CopyArtifact',
                    projectName: 'CI-pipeline',
                    filter: ".env",
                    target: '.']);
            }
        }
    }

    stage('Install pm2') {
      steps {
        sh 'npm i -g pm2'
      }
    }
    stage('Install dependencies') {
      steps {
        sh 'npm install'
      }
    }   
    stage('initdb') {
      steps {
         sh 'npm run initdb'
      }
    }
    stage('run server') {
      steps {
         sh 'pm2 npm run dev'
      }
    }    

  }

}




