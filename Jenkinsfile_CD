
def nodeName

pipeline {
    agent {
        node {
            label nodeName
        }
    }


  stages {

    stage('install NodeJS if not installed') {
      steps {
        sh 'curl -sL https://raw.githubusercontent.com/AkivaCohen/CI-CD/main/nodejs_install.sh | sudo -E bash -'
        sh 'node --version'
      }
    }

    stage('Cloning Git') {
      steps {
        git branch: 'main', url: 'https://github.com/AkivaCohen/WeightTracker.git'
      }
    }

    stage('Copy Archive') {
         steps {
             script {
                step ([$class: 'CopyArtifact',
                    projectName: 'CI-pipeline',
                    filter: ".env",
                    target: '.']);
            }
        }
    }

    stage('Install pm2') {
      steps {
        sh 'sudo npm i -g pm2'
      }
    }
    stage('Install dependencies') {
      steps {
        sh 'npm install'
      }
    }   
    stage('initdb') {
      steps {
         sh 'npm run initdb'
      }
    }
    stage('run server') {
      steps {
         sh 'pm2 start npm -- run dev'
         sh 'pm2 save'
         sh 'pm2 startup'
      }
    }    

  }

}




